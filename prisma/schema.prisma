generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  tuitions    Tuition[]
  couponCount Int       @default(0)
}

model Tutor {
  id        String    @id @default(uuid())
  name      String
  education String
  image     String?
  tuitions  Tuition[]
}

model Tuition {
  id        String      @id @default(uuid())
  type      TuitionType
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  startTime DateTime
  endTime   DateTime
  tuteeId   String
  tutee     User        @relation(fields: [tuteeId], references: [id])
  tutor     Tutor       @relation(fields: [tutorId], references: [id])
  tutorId   String
}

model TuitionCoupon {
  id String @id @default(uuid())
}

enum TuitionType {
  TWENTY
  FORTY
}
